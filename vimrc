set scrolloff=5               " 5 lines below/above
set cmdheight=1               " command line 2 lines high
set laststatus=2              " Status bar
set encoding=utf-8
set ruler                     " Show file stats
set expandtab                 " taby jsou mezery
set confirm                   " pri zavirani neulozeneho souboru se pta
set tabstop=4                 " number of visual spaces per TAB
set softtabstop=4             " number of spaces in tab when editing
set shiftwidth=4
set autoindent                " autoindent kurzoru
set textwidth=120             " zalamovani textu
set number                    " cisla radku
set incsearch                 " vyhledava pri zadavani stringu
set nohlsearch                " nehighlightuje matchujici stringy
set cursorline                " highlight current line
set showmatch                 " highlight matching [{()}]
syntax enable                 " enable syntax processing
nnoremap ; :
inoremap wj <esc>
colorscheme evening 
