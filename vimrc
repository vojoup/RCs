  1 set scrolloff=5               " 5 lines below/above                         
  2 set cmdheight=1               " command line 2 lines high
  3 set laststatus=2              " Status bar
  4 set encoding=utf-8
  5 set ruler                     " Show file stats
  6 set expandtab                 " taby jsou mezery
  7 set confirm                   " pri zavirani neulozeneho souboru se pta
  8 set tabstop=4                 " number of visual spaces per TAB
  9 set softtabstop=4             " number of spaces in tab when editing
 10 set shiftwidth=4
 11 set autoindent                " autoindent kurzoru
 12 set textwidth=120             " zalamovani textu
 13 set number                    " cisla radku
 14 set incsearch                 " vyhledava pri zadavani stringu
 15 set nohlsearch                " nehighlightuje matchujici stringy
 16 set cursorline                " highlight current line
 17 set showmatch                 " highlight matching [{()}]
 18 syntax enable                 " enable syntax processing
 19 nnoremap ; :
 20 inoremap wj <esc>
 21 colorscheme elflord
